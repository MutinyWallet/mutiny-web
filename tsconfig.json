{
    "include": [
        "global.d.ts",
        "src/**/*",
        "src/routes/**/*",
        "tailwind.config.cjs",
        ".eslintrc.cjs"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsxImportSource": "solid-js",
        "jsx": "preserve",
        "strict": true,
        "types": ["solid-start/env"],
        "baseUrl": "./",
        "paths": {
            "~/*": ["./src/*"]
        }
    }
}
